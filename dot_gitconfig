[alias]
	fix = "!f() { COMMIT=$(git log -n 50 --pretty=format:'%h %s' --no-merges | fzf --no-sort | cut -c -7); git commit --fixup=$COMMIT && GIT_SEQUENCE_EDITOR=true git rebase -i --autostash --autosquash $COMMIT^; }; f"
	goback = "!f() { POINT=$(git reflog -n 50 --pretty=format:'%h %gs' | fzf --no-sort | cut -c -7); git reset --hard $POINT; }; f"
	pushf = push --force-with-lease
	oops = commit --amend --no-edit
	wt-setup = config --add remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*"
