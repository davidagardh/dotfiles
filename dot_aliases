# shellcheck=sh

function alias_if_exists() {
	# Does the alias only if the aliased program is installed
	if command -v $2 > /dev/null; then
		alias "$1"="$2"
	fi
}

# Shortcuts
alias cl="clear"
alias l="ls -l"
alias la="ls -lA"

alias cz="chezmoi"
alias czadd="chezmoi add"
alias czapp="chezmoi apply"

function cdl() {
	cd $1
	ls
}

# Git
alias gs="git status"
alias gu="git pull"
alias gsu="git stash && git pull && git stash pop"
alias gd="git diff"
alias ga="git add"
alias gcm="git commit -m"
alias gcam="git commit -am"
alias gp="git pull && git push"
alias gsw="git switch"

if type glab > /dev/null; then
	alias glab="op plugin run -- glab"
fi

# youtube-dl
alias yt=youtube-dl
alias ytmp3="youtube-dl --extract-audio --audio-format mp3"

# toolbox
alias te="toolbox enter"
alias tr="toolbox run"
alias tdnf="toolbox run dnf"
alias tnvim="toolbox run nvim"

mvr() {
	# Reverse mv
	mv $2 $1
}

system-upgrade() {
	rpm-ostree upgrade
	flatpak upgrade -y
	tr sudo dnf upgrade -y
	tr -c hacking sudo dnf upgrade -y
	tr -c java sudo dnf upgrade -y
}

# Misc.
alias yubi-switch='gpg-connect-agent "scd serialno" "learn --force" /bye'

